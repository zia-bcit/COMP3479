#include "Lab_02.h"
#include <iostream>
using namespace std;

int main() {
    cout << "Max Integer: " << std::numeric_limits<int>::max() << endl;
    cout << "Min Integer: " << std::numeric_limits<int>::min() << endl;
    cout << "Size of Integer: " << sizeof(int) << endl;

    cout << "Max Bool" << std::numeric_limits<bool>::max() << endl;
    cout << "Min Bool" << std::numeric_limits<bool>::min() << endl;
    cout << "Size of Bool: " << sizeof(bool) << endl;

    cout << "Max short Int" << std::numeric_limits<short>::max() << endl;
    cout << "Min short Int" << std::numeric_limits<short>::min() << endl;
    cout << "Size of short: " << sizeof(short) << endl;

    cout << "Max Unsigned short int: " << std::numeric_limits<unsigned short>::max() << endl;
    cout << "Min Unsigned short int: " << std::numeric_limits<unsigned short>::min() << endl;
    cout << "Size of unsigned short: " << sizeof(unsigned short) << endl;

    cout << "Max Long Int: " << std::numeric_limits<long>::max() << endl;
    cout << "Min Long Int: " << std::numeric_limits<long>::min() << endl;
    cout << "Size of Long Int: " << sizeof(long) << endl;

    cout << "Max unsigned Long Int: " << std::numeric_limits<unsigned long>::max() << endl;
    cout << "Min unsigned Long Int: " << std::numeric_limits<unsigned long>::min() << endl;
    cout << "Size of  unsigned Long Int: " << sizeof(unsigned long) << endl;

    cout << "Max Long long: " << std::numeric_limits<long long>::max() << endl;
    cout << "Min Long long: " << std::numeric_limits<long long>::min() << endl;
    cout << "Size of Long long: " << sizeof(long long) << endl;

    cout << "Max unsigned Long long: " << std::numeric_limits<unsigned long long>::max() << endl;
    cout << "Min unsigned Long long: " << std::numeric_limits<unsigned long long>::min() << endl;
    cout << "Size of unsigned long long: " << sizeof(unsigned long long) << endl;

    cout << "Max Double: " << std::numeric_limits<double>::max() << endl;
    cout << "Min Double: " << std::numeric_limits<double>::min() << endl;
    cout << "Size of double: " << sizeof(double) << endl;

    cout << "Max Long Double: " << std::numeric_limits<long double>::max() << endl;
    cout << "Min Long Double: " << std::numeric_limits<long double>::min() << endl;
    cout << "Size of Long Double: " << sizeof(long double) << endl;

    cout << "Max float: " << std::numeric_limits<float>::max() << endl;
    cout << "Min float: " << std::numeric_limits<float>::min() << endl;
    cout << "Size of float: " << sizeof(float) << endl;

    cout << "Max char: " <<CHAR_MAX << endl;
    cout << "Min char: " << CHAR_MIN<< endl;
    cout << "Size of char: " << sizeof(char) << endl;

    cout << "Max unsigned char: " <<UCHAR_MAX << endl;
    cout << "Min unsigned char: " << (int)std::numeric_limits<unsigned char>::min() << endl;
    cout << "Size of unsigned char: " << sizeof(unsigned char) << endl;
    return 0;
//some changes
}
